<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Company>ThresholdMode.Com</Company>
    <SourceRevisionId>build$([System.DateTime]::UtcNow.ToString("yyyyMMddHHmmss"))</SourceRevisionId>
    <Product>Goedel.Discovery</Product>
    <Description>Service discovery.</Description>
    <Copyright>Â© 2020</Copyright>
    <Title>Goedel.Discovery</Title>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <Configurations>Debug;Release;Sandcastle;Github</Configurations>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <DocumentationFile>xml\Goedel.Discovery.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Github'">
    <DefineConstants>TRACE;_Github_</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Goedel.Cryptography\Goedel.Cryptography.csproj" />
    <ProjectReference Include="..\Goedel.Utilities\Goedel.Utilities.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Exceptions.cs">
      <DependentUpon>Exceptions.exceptional</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Exceptions.exceptional">
      <LastGenOutput>Exceptions.cs</LastGenOutput>
      <Generator>exceptional</Generator>
    </None>
  </ItemGroup>
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent" Condition="'$(Configuration)'!='Github'">
    <Exec Command="VSPreBuild" />
  </Target>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)'!='Github'">
    <Exec Command="VSPostBuild" />
  </Target>

</Project>
