<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="$(SolutionDir)CommonSettings.xml" />
	<PropertyGroup>
		<Product>Goedel.Utilities</Product>
		<Description>Coding utilities common to all Goedel libraries.</Description>
