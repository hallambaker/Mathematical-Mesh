<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Company>ThresholdSecrets.Com</Company>
    <Configurations>Debug;Release;Sandcastle;Github</Configurations>
    <SourceRevisionId>build$([System.DateTime]::UtcNow.ToString("yyyyMMddHHmmss"))</SourceRevisionId>
    <Product>Goedel.Cryptography</Product>
    <Description>Cryptographic support libraries.</Description>
    <Copyright>Â© 2020</Copyright>
    <Title>Goedel.Cryptography</Title>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>xml\Goedel.Cryptography.xml</DocumentationFile>
    <NoWarn>1701;1702;CA1707</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Focus|AnyCPU'">
    <DocumentationFile>xml\Goedel.Cryptography.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>xml\Goedel.Cryptography.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Github|AnyCPU'">
    <DocumentationFile>xml\Goedel.Cryptography.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Goedel.ASN\Goedel.ASN.csproj" />
    <ProjectReference Include="..\Goedel.IO\Goedel.IO.csproj" />
    <ProjectReference Include="..\Goedel.Utilities\Goedel.Utilities.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Exceptions.cs">
      <DependentUpon>Exceptions.exceptional</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="UDFConstants.cs">
      <DependentUpon>UDFConstants.Constant</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="PKIX\PKIX.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>PKIX.asn2</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Exceptions.exceptional">
      <LastGenOutput>Exceptions.cs</LastGenOutput>
      <Generator>exceptional</Generator>
    </None>
    <None Update="PKIX\PKIX.asn2">
      <Generator>ASN2CS</Generator>
      <LastGenOutput>PKIX.cs</LastGenOutput>
    </None>
      <None Update="UDFConstants.Constant">
      <Generator>Constant</Generator>
        <LastGenOutput>UDFConstants.cs</LastGenOutput>
    </None>  
</ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent" Condition="'$(Configuration)'!='Github'">
    <Exec Command="VSPreBuild" />
  </Target>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)'!='Github'">
    <Exec Command="VSPostBuild" />
  </Target>

</Project>
