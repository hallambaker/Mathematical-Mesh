<Page x:Class="Goedel.MeshProfileManager.Dialog_AddAccountStart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	Title="Dialog_AddAccountStart">
    <DockPanel>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="32" 
            xml:space="preserve" Margin="25,25,25,0" DockPanel.Dock="Top">Lets get started!
</TextBlock>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="20" 
            xml:space="preserve" Margin="25,0,25,25" DockPanel.Dock="Top">First, lets configure your Personal Mesh Profile.

</TextBlock>
        <StackPanel>

        <Grid Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_NewAccount">New</Button>
                <TextBlock TextWrapping="Wrap" FontSize="16"   TextAlignment="Center"
						VerticalAlignment="Center"  Margin="20,20,20,20">Choose this if you have not created a personal mesh profile or
want to create a new one.
</TextBlock>
            </StackPanel>
			<StackPanel Grid.Column="2">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_ConnectAccount">Connect</Button>
                <TextBlock TextWrapping="Wrap" FontSize="16"   TextAlignment="Center"
						VerticalAlignment="Center"  Margin="20,20,20,20">Choose this if you have already created a mesh profile
and it is active on a machine you can connect to.
</TextBlock>
            </StackPanel>
			<StackPanel Grid.Column="4">
                <Button  FontSize="20" Width="150" Height="30" 
                         Click="Action_RecoverAccount">Recover</Button>
                <TextBlock TextWrapping="Wrap" FontSize="16"   TextAlignment="Center"
						VerticalAlignment="Center"  Margin="20,20,20,20">Choose this if you have already created a mesh profile
and need to recover it.
</TextBlock>
            </StackPanel>
		</Grid>


        </StackPanel>
    </DockPanel>
</Page>
